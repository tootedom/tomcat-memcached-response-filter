                                <goals>
                                    <goal>execute</goal>
                                </goals>
                                <configuration>
                                    <configDir>src/integration-test/resources</configDir>
                                    <dataFolder>src/integration-test/resources/data</dataFolder>
                                    <resultsFolder>target/gatling/results</resultsFolder>
                                    <requestBodiesFolder>src/integration-test/resources/request-bodies</requestBodiesFolder>
                                    <simulationsFolder>src/integration-test/scala</simulationsFolder>
                                    <includes>
                                        <include>**/*.scala</include>
                                    </includes>
                                    <simulationClass>${gatling.simulationClass}</simulationClass>

                                    <!--    <noReports>false</noReports> -->
                                    <!--    <reportsOnly>false</reportsOnly> -->
                                    <!--    <simulationClass>foo.Bar</simulationClass> -->
                                    <jvmArgs>
                                        <jvmArg>-Xmx1024m</jvmArg>
                                        <jvmArg>-Xms1024m</jvmArg>
                                        <jvmArg>-XX:MaxPermSize=512m</jvmArg>
                                        <jvmArg>-XX:+UnlockCommercialFeatures</jvmArg>
                                        <jvmArg>-XX:+FlightRecorder</jvmArg>
                                        <jvmArg>-XX:StartFlightRecording=duration=160s,delay=10s,settings=profile,filename=target/recording.jfr</jvmArg>
                                    </jvmArgs>

                                    <fork>true</fork>
                                    <!--    <propagateSystemProperties>true</propagateSystemProperties> -->
                                    <!--    <failOnError>true</failOnError> -->

                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
